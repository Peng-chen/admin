<div class="container">
#parse("/screen/nav.vm")

	<div class="data">
		<div id="formDiv" class="span10">
		
		       <div class="form-group col-sm-12">
					<label class="col-sm-2" style="font-size:16px;">添加商品</label>
					
				</div>
			
				<div class="form-group col-sm-12">
					<label for="file" class="col-sm-2 control-label">商品类型</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<select class="form-control" name="goodsType" id="goodsType">
								<option value="0">充值品</option>
								<option value="1">曲包</option>
								<option value="2">谱面</option>
								<option value="3">头像</option>
								<option value="4">道具</option>
								<option value="5">装备</option>
							</select>
					
					</div>
				</div>

				<div class="form-group col-sm-12">
					<label for="bpm" class="col-sm-2 control-label">币种类型</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<select class="form-control" name="currencyType" id="currencyType">
								<option value="0">金币</option>
								<option value="1">残谱</option>
								<option value="2">人民币</option>
							</select>
					</div>
				</div>
				<div class="form-group col-sm-12">
					<label for="bpm" class="col-sm-2 control-label">商品价格</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<input  id="price" type="number" min="0" class="form-control" 
							placeholder="请输入价格" required="required" >
					</div>
				</div>
				<div class="form-group col-sm-12">
					<label for="bpm" class="col-sm-2 control-label">商品在表中的id</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<input  id="productId" type="number" min="0" step="1" class="form-control" 
							placeholder="请输入id" required="required" >
					</div>
				</div>
				
				<div class="form-group col-sm-12">
					<div class="col-sm-offset-2 col-sm-6">
						<button id="addGoods-btn" class="btn btn-primary btn-block"">确定</button>
					</div>
				</div>
		</div>
	</div>

</div>