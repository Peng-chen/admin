<div class="container">
#parse("/screen/nav.vm")

	<div class="data">
		<div id="formDiv" class="span10">
		
		       <div class="form-group col-sm-12">
					<label class="col-sm-2" style="font-size:16px;">添加装备</label>
					
				</div>
		
			
				<div class="form-group col-sm-12">
					<label for="file" class="col-sm-2 control-label">装备名称</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<input id="equipname" required="required" class="form-control col-sm-10"
							name="file" data-type="text" placeholder="请输入装备名称">
					</div>
				</div>

				<div class="form-group col-sm-12">
					<label for="bpm" class="col-sm-2 control-label">使用效果描述</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<textarea  id="equipdes" class="form-control" rows="3" placeholder="请输入描述"
							required="required" data-type="text" name="description"></textarea>
					</div>
				</div>
				<div class="form-group col-sm-12">
					<label for="bpm" class="col-sm-2 control-label">装备tag</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<input  id="equiptag" type="text" class="form-control" name="hardLevel"
							placeholder="请输入装备tag" required="required" data-type="integer">
					</div>
				</div>
				<div class="form-group col-sm-12">
					<label for="bpm" class="col-sm-2 control-label">类型</label>
					<div class="col-sm-8 input-group" data-role="acknowledge-input">
						<div data-role="acknowledgement">
							<i></i>
						</div>
						<select class="form-control" name="equiptype" id="equiptype">
								<option value="0">花朵</option>
								<option value="1">皮肤</option>
								<option value="2">小球</option>
								<option value="3">背景</option>
								<option value="4">音效</option>
								<option value="5">光效</option>
							</select>
					</div>
				</div>
            <div class="form-group col-sm-12">
                <label for="bpm" class="col-sm-2 control-label">装备quality</label>
                <div class="col-sm-8 input-group" data-role="acknowledge-input">
                    <div data-role="acknowledgement">
                        <i></i>
                    </div>
                    <input  id="equipquality" type="text" class="form-control" name="equipquality"
                            placeholder="请输入装备quality,比如:A" required="required" data-type="text">
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label for="bpm" class="col-sm-2 control-label">装备Source</label>
                <div class="col-sm-8 input-group" data-role="acknowledge-input">
                    <div data-role="acknowledgement">
                        <i></i>
                    </div>
                    <input  id="equipsource" type="text" class="form-control" name="equipsource"
                            placeholder="请输入装备Source" required="required" data-type="text">
                </div>
            </div>
				<div class="form-group col-sm-12">
					<div class="col-sm-offset-2 col-sm-6">
						<button id="addEquipment-btn" class="btn btn-primary btn-block"">确定</button>
					</div>
				</div>
		</div>
	</div>

</div>